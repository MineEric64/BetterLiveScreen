<Window x:Class="BetterLiveScreen.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterLiveScreen"
        mc:Ignorable="d"
        Title="Login" Height="275" Width="346">
    <Grid>
        <Image x:Name="usericon" HorizontalAlignment="Left" Height="100" Margin="109,25,0,0" VerticalAlignment="Top" Width="100" Source="/Resources/black_screen.png" Stretch="UniformToFill"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Margin="18,165,0,0" TextWrapping="Wrap" Text="Guest" VerticalAlignment="Top" Width="235" FontSize="20"/>
        <Label x:Name="userauth" Content="#Guest" HorizontalAlignment="Left" Margin="18,195,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ok" Content="OK!" HorizontalAlignment="Left" Margin="266,165,0,0" VerticalAlignment="Top" Height="25" Width="41" Click="ok_Click" FontSize="16"/>
        <Button x:Name="loginFromDiscord" Content="Login from Discord" HorizontalAlignment="Left" Margin="198,198,0,0" Click="loginFromDiscord_Click" VerticalAlignment="Top"/>

    </Grid>
</Window>
