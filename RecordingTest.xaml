        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterLiveScreen.Recording"
        mc:Ignorable="d"
        Title="BetterLiveScreen : Recording Test" Height="993" Width="1350">
    <Grid>
        <MediaElement x:Name="xMedia" HorizontalAlignment="Left" Height="720" Margin="26,23,0,0" VerticalAlignment="Top" Width="1280"/>
