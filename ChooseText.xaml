<Window x:Class="BetterLiveScreen.ChooseText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterLiveScreen"
        mc:Ignorable="d"
        Title="Input Text" Height="134" Width="332">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="24,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275" FontSize="20"/>
        <Button x:Name="OK" Content="OK" HorizontalAlignment="Left" Margin="24,60,0,0" VerticalAlignment="Top" Height="29" Width="275" Click="OK_Click"/>

    </Grid>
</Window>
